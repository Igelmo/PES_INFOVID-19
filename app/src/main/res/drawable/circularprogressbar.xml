<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="ExtraText">
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="6"
            android:shape="ring"
            android:thicknessRatio="15.0"
            android:useLevel="true">
            <gradient
                android:centerColor="@color/colorDropDownExpandBackground"
                android:endColor="@color/colorDropDownExpandBackground"
                android:startColor="@color/colorDropDownExpandBackground"
                android:type="sweep" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">
            <shape
                android:innerRadiusRatio="6"
                android:shape="ring"
                android:thicknessRatio="15.0"
                android:useLevel="true">
                <gradient
                    android:centerColor="@color/colorAccent"
                    android:endColor="@color/colorPrimaryDark"
                    android:startColor="@color/colorDropDownSecondExpandBackground"
                    android:type="sweep" />
                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />
            </shape>
        </rotate>
    </item>
</layer-list>