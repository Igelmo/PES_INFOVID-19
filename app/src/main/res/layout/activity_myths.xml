<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MythsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMyths"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/go_back_icon"
        app:title="@string/informaci_rellevant"
        app:titleTextColor="@android:color/background_light" />

    <LinearLayout
        android:id="@+id/layoutDropDown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarMyths">

        <hakobastvatsatryan.DropdownTextView
            android:id="@+id/first_dropdown_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bg_drawable_expanded="@color/design_default_color_on_secondary"
            app:bg_drawable_regular="@color/design_default_color_primary"
            app:content_text_color="@color/design_default_color_on_secondary"
            app:content_text_size="30dp"
            app:expand_duration="@integer/config_navAnimTime"
            app:panel_padding="@dimen/arrow_default_size"
            app:title_text_color="@color/design_default_color_primary"
            app:title_text_size="50dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>